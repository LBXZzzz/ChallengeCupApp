<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.ConsultActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/too_bar_consult_return"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_return" />

        <TextView
            android:id="@+id/tv_consult_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="①请描述你的情况"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/too_bar_consult_return" />

        <TextView
            android:id="@+id/tv_consult_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="  ---------------------  "
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_consult_title1"
            app:layout_constraintStart_toEndOf="@+id/tv_consult_title1"
            app:layout_constraintTop_toTopOf="@+id/tv_consult_title1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="②进入对话"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_consult_title1"
            app:layout_constraintStart_toEndOf="@+id/tv_consult_title2"
            app:layout_constraintTop_toBottomOf="@+id/too_bar_consult_return" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_health"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_consult_title1"
            app:layout_constraintWidth_percent="0.9">

            <EditText
                android:id="@+id/et_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="为了更好的获得医生帮助，请尽可能详细描述病情"
                android:padding="16dp"
                android:textSize="13sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_connect_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_consult_voice"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_health1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="上传检查报告或患处照片"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/cd_health"
            app:layout_constraintTop_toBottomOf="@+id/cd_health" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="照片仅自己和医生可见"
            android:textColor="@color/gray_transparent_60"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/tv_health1"
            app:layout_constraintTop_toBottomOf="@+id/tv_health1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_photo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="@+id/tv_health1"
            app:layout_constraintTop_toBottomOf="@+id/tv_health1"
            app:layout_constraintWidth_percent="0.25">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:text="+"
                android:textSize="35sp"
                app:layout_constraintWidth_percent="0.25" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/bt_consult_consult"
            app:layout_constraintEnd_toEndOf="@+id/bt_consult_consult"
            app:layout_constraintStart_toStartOf="@+id/cd_health">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击立即咨询即同意"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="《病例隐私协议》"
                android:textColor="@color/light_theme_light_mode"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="，家医签署"
                android:textSize="11sp" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_consult_consult"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="330dp"
            android:background="@drawable/button_consult_shape"
            android:text="立即咨询"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cd_health"
            app:layout_constraintWidth_percent="0.94" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
