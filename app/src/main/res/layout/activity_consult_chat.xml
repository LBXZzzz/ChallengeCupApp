<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.ConsultChatActivity">

    <LinearLayout
        android:id="@+id/lly_consult_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Toolbar
                    android:id="@+id/tb_consult_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_theme_light_mode"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">

                        <ImageView
                            android:id="@+id/iv_consult_chat_return"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/ic_return"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_consult_chat_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/consult_chat_toolbar1"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/iv_consult_chat_return"
                            app:layout_constraintTop_toBottomOf="@id/iv_consult_chat_return" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/consult_chat_toolbar2"
                            android:textColor="@color/white_transparent_60"
                            android:textSize="11sp"
                            app:layout_constraintStart_toStartOf="@id/tv_consult_chat_1"
                            app:layout_constraintTop_toBottomOf="@id/tv_consult_chat_1" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </Toolbar>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_consult_people"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="360dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tb_consult_chat">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_consult_chat_people" />
                </androidx.cardview.widget.CardView>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_consult_chat_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/background_ellipse_white"
                    app:layout_constraintStart_toEndOf="@id/cv_consult_people"
                    app:layout_constraintTop_toTopOf="@+id/cv_consult_people"
                    app:layout_constraintWidth_percent="0.7">

                    <TextView
                        android:id="@+id/tv_consult_patient_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="王先生  男|30岁"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view_consult_chat"
                        android:layout_width="0dp"
                        android:layout_height="0.3dp"
                        android:layout_margin="15dp"
                        android:background="@color/gray_transparent_20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_consult_patient_information"
                        app:layout_constraintWidth_percent="0.95" />

                    <TextView
                        android:id="@+id/tv_consult_chat_disease_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="病情描述：描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_consult_chat"
                        app:layout_constraintWidth_percent="0.95" />

                    <androidx.constraintlayout.helper.widget.Flow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        app:constraint_referenced_ids="iv_consult_chat_preview1,iv_consult_chat_preview2,iv_consult_chat_preview3,iv_consult_chat_preview4,iv_consult_chat_preview5"
                        app:flow_wrapMode="aligned"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_consult_chat_disease_description" />

                    <ImageView
                        android:id="@+id/iv_consult_chat_preview1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_consult_chat_preview" />

                    <ImageView
                        android:id="@+id/iv_consult_chat_preview2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_consult_chat_preview" />

                    <ImageView
                        android:id="@+id/iv_consult_chat_preview3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_consult_chat_preview" />

                    <ImageView
                        android:id="@+id/iv_consult_chat_preview4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_consult_chat_preview" />

                    <ImageView
                        android:id="@+id/iv_consult_chat_preview5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_consult_chat_preview" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_consult_chat_doctor"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="360dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_consult_chat_1">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_consult_chat_doctor" />
                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_consult_chat_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/background_ellipse_white"
                    app:layout_constraintEnd_toStartOf="@+id/cv_consult_chat_doctor"
                    app:layout_constraintTop_toTopOf="@+id/cv_consult_chat_doctor"
                    app:layout_constraintWidth_percent="0.7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="你好，您提交的疾病描述已收到\n根据您的描述我建议您采取以下治疗方案\n1.××××××××××××××××××\n2.××××××××××××××××××"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.95" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="85dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.65">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/light_theme_light_mode"
                    android:text="@string/consult_chat_bt"
                    android:textSize="11sp" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</layout>
