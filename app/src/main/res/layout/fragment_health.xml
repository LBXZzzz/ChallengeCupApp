<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".ui.fragment.HealthFragment">

        <ScrollView
            android:id="@+id/sv_product_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="0dp"


            tools:context=".ui.fragment.HealthFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_me_status_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@color/blue_transparent_40"
                    android:fitsSystemWindows="true" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <View
                        android:id="@+id/view_health_top"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/background_health_top"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cd_health_head_portrait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="360dp"
                        app:layout_constraintBottom_toTopOf="@+id/cv_health_banner"
                        app:layout_constraintStart_toStartOf="@+id/cv_health_banner">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_health_head_portrait" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@+id/cd_health_head_portrait"
                        app:layout_constraintStart_toEndOf="@+id/cd_health_head_portrait"
                        app:layout_constraintTop_toTopOf="@+id/cd_health_head_portrait">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi 小M,"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="早上好"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_health_information"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_health_information"
                        app:layout_constraintBottom_toBottomOf="@+id/cd_health_head_portrait"
                        app:layout_constraintEnd_toEndOf="@+id/cv_health_banner"
                        app:layout_constraintTop_toTopOf="@+id/cd_health_head_portrait" />

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/ic_health_search"
                        app:layout_constraintBottom_toBottomOf="@+id/cd_health_head_portrait"
                        app:layout_constraintEnd_toStartOf="@+id/iv_health_information"
                        app:layout_constraintTop_toTopOf="@+id/cd_health_head_portrait" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_health_banner"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/view_health_top"
                        app:layout_constraintEnd_toEndOf="@id/view_health_top"
                        app:layout_constraintStart_toStartOf="@id/view_health_top"
                        app:layout_constraintTop_toBottomOf="@id/view_health_top"

                        app:layout_constraintWidth_percent="0.86">

                        <ImageView
                            android:id="@+id/iv_health_banner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_health_banner_0" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/tv_health_quick_access"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="快捷访问"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/cv_health_banner"
                        app:layout_constraintTop_toBottomOf="@+id/cv_health_banner" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看全部"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@+id/iv_health_see_all"
                        app:layout_constraintTop_toTopOf="@+id/tv_health_quick_access" />

                    <ImageView
                        android:id="@+id/iv_health_see_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_health_see_all"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_health_quick_access"
                        app:layout_constraintEnd_toEndOf="@+id/cv_health_banner"
                        app:layout_constraintTop_toTopOf="@+id/tv_health_quick_access" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_health1"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_ripple_mask"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="@drawable/btn_ripple_mask"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintStart_toStartOf="@+id/cv_health_banner"
                        app:layout_constraintTop_toBottomOf="@+id/tv_health_quick_access"
                        app:layout_constraintWidth_percent="0.40">

                        <ImageView
                            android:id="@+id/iv_health_inquiry"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_health_1" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_health2"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/linearlayout_water_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="@drawable/btn_ripple_mask"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintEnd_toEndOf="@+id/cv_health_banner"
                        app:layout_constraintTop_toBottomOf="@+id/tv_health_quick_access"
                        app:layout_constraintWidth_percent="0.4">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_health_2" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/tv_health_training_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="训练日历"
                        android:textColor="?attr/itemTextColor"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/cv_health1"
                        app:layout_constraintTop_toBottomOf="@+id/cv_health1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="进入签到"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@+id/iv_health_see_all"
                        app:layout_constraintTop_toTopOf="@+id/tv_health_training_record" />

                    <ImageView
                        android:id="@+id/iv_health_see_all1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_health_see_all"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_health_training_record"
                        app:layout_constraintEnd_toEndOf="@+id/cv_health_banner"
                        app:layout_constraintTop_toTopOf="@+id/tv_health_training_record" />

                    <ImageView
                        android:id="@+id/iv_health_training_calendar"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_health_0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_health_training_record"
                        app:layout_constraintWidth_percent="0.92" />


                    <TextView
                        android:id="@+id/tv_health_course_commendation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="康复课程"
                        android:textColor="?attr/itemTextColor"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/cv_health_banner"
                        app:layout_constraintTop_toBottomOf="@+id/iv_health_training_calendar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看全部"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@+id/iv_health_see_all"
                        app:layout_constraintTop_toTopOf="@+id/tv_health_quick_access" />

                    <ImageView
                        android:id="@+id/iv_health_see_all3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_health_see_all"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_health_course_commendation"
                        app:layout_constraintEnd_toEndOf="@+id/cv_health_banner"
                        app:layout_constraintTop_toTopOf="@+id/tv_health_course_commendation" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看全部"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintEnd_toStartOf="@+id/iv_health_see_all3"
                        app:layout_constraintTop_toTopOf="@+id/tv_health_course_commendation" />

                    <ImageView
                        android:id="@+id/iv_health_see_all2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_health_see_all"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_health_quick_access"
                        app:layout_constraintEnd_toEndOf="@+id/cv_health_banner"
                        app:layout_constraintTop_toTopOf="@+id/tv_health_quick_access" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_health_course"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintStart_toStartOf="@+id/cv_health_banner"
                        app:layout_constraintTop_toBottomOf="@+id/tv_health_course_commendation"
                        app:layout_constraintWidth_percent="0.4">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/iv_health_course"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_health_3"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_transparent_80"
                                android:paddingStart="8dp"
                                android:text="上臂专项训练"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                app:layout_constraintBottom_toBottomOf="@+id/iv_health_course"
                                app:layout_constraintStart_toStartOf="@+id/iv_health_course" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_health_course1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/cv_health_banner"
                        app:layout_constraintTop_toBottomOf="@+id/tv_health_course_commendation"
                        app:layout_constraintWidth_percent="0.4">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/iv_health_course1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_health_4"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_transparent_80"
                                android:paddingStart="8dp"
                                android:text="腕关节专项训练"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                app:layout_constraintBottom_toBottomOf="@+id/iv_health_course1"
                                app:layout_constraintStart_toStartOf="@+id/iv_health_course1" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_health_health_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="课程定制"
                        android:textColor="?attr/itemTextColor"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/cv_health_banner"
                        app:layout_constraintTop_toBottomOf="@+id/cv_health_course" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_health_health_course"
                        app:layout_constraintWidth_percent="0.92">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_health_5" />
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</layout>